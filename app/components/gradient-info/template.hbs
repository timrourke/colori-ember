<button class="gradient-info__icon">
	{{#if isShowingIcon}}
		{{svg-icon name="info"}}
	{{/if}}
</button>
<div class="gradient-info__content">
	{{#if isEditing}}
		<h1 class="gradient-info__title">{{input type="text" value=gradient.title}}</h1>
		<p class="gradient-info__description">{{textarea value=gradient.description}}</p>
		<button {{action 'finishEditing' bubbles=false}}>
			Save Changes
		</button>
	{{else}}
		<h1 class="gradient-info__title">{{gradient.title}}</h1>
		<p class="gradient-info__description">{{gradient.description}}</p>
		<button {{action 'beginEditing' bubbles=false}}>
			Edit
		</button>
	{{/if}}
	
</div>